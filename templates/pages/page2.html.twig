{% extends '_page.html.twig' %}

{% block title %}Page 2{% endblock %}

{% block content %}

<div class="container">

    <h1>Page 2</h1>

    <div class="row">
        <div class="col g-3">
            <div {{ stimulus_controller('hello') }}>
                ...
            </div>
        </div>
        <div class="col g-3">
            <div {{ stimulus_controller('clicker', { 'startCount': 199 }) }}>
                <button class="btn btn-info"
                    {{ stimulus_action('clicker', 'increment', 'click') }}
                    {{ stimulus_target('clicker', 'clickBtn') }}
                >
                    Click
                </button>
                I have been clicked
                <span {{ stimulus_target('clicker', 'count') }}>0</span>
                times!
            </div>
        </div>
    </div>

    <div class="my-3 p-3 bg-white">
        <turbo-frame id="client-list" src="{{ path('_fragment_client_list') }}">
            Loading...
        </turbo-frame>
    </div>
</div>

{% endblock %}
